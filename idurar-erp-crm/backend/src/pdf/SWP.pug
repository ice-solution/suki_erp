doctype html
html
  head
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      .sheet {
        margin: 0;
        width: 100%; 
        height: 297mm;
      }

      body{
        width: 100%; 
        margin: 0;
        padding: 0px 20px;
        background: #ffffff;
        font-family: Arial, sans-serif;
        font-size:12px;
        color:#222;
      }
      *, *:before, *:after {
        box-sizing: inherit;
        color:#222
      }

      .clearfix {
        display: block; }
      .clearfix:after {
        content: "";
        display: table;
        clear: both;
      }
      .left{
        float:left;
      }
      .right{
        float:right;
      }
      
      .header-section {
        width: 100%;
        margin-bottom: 20px;
      }
      
      .company-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 15px;
      }
      
      .logo-section {
        display: flex;
        align-items: center;
      }
      
      .logo {
        width: 80px;
        height: 80px;
        margin-right: 15px;
      }
      
      .company-name {
        font-size: 18px;
        font-weight: bold;
        color: #222;
        line-height: 1.4;
      }
      
      .company-name-english {
        font-size: 14px;
        font-weight: normal;
        color: #666;
      }
      
      .company-ownership {
        font-size: 10px;
        color: #666;
        margin-top: 5px;
      }
      
      .certification-section {
        text-align: right;
        font-size: 10px;
        color: #666;
      }
      
      .certification-logos {
        margin-bottom: 5px;
      }
      
      .document-title {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin: 30px 0;
        color: #222;
      }
      
      .info-section { width: 100%; margin-bottom: 16px; font-size: 10px; }
      .info-table { width: 100%; border-collapse: collapse; table-layout: fixed; }
      .info-table td { vertical-align: top; font-size: 10px; }
      .info-table .info-left { width: 55%; padding: 0 12px 0 0; }
      .info-table .info-right { width: 45%; text-align: right; padding: 0 0 0 12px; }
      .info-row { margin-bottom: 4px; }
      
      .table-container {
        width: 100%;
        margin: 20px 0;
      }
      
      .items-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }
      
      .items-table th {
        background-color: #f0f0f0;
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
        font-weight: bold;
        font-size: 12px;
      }
      
      .items-table td {
        border: 1px solid #ddd;
        padding: 10px;
        font-size: 12px;
      }
      
      .items-table .item-name {
        width: 60%;
      }
      
      .items-table .item-qty {
        width: 20%;
        text-align: center;
      }
      
      .items-table .item-unit {
        width: 20%;
        text-align: center;
      }
      
      .acknowledgement-section {
        margin-top: 40px;
        width: 100%;
      }
      
      .acknowledgement-title {
        text-align: center;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 20px;
      }
      
      .acknowledgement-info {
        display: flex;
        justify-content: space-around;
        margin-bottom: 30px;
      }
      
      .acknowledgement-item {
        text-align: center;
      }
      
      .acknowledgement-label {
        font-weight: bold;
        margin-bottom: 10px;
        font-size: 12px;
      }
      
      .acknowledgement-line {
        border-bottom: 1px solid #222;
        width: 150px;
        height: 30px;
        margin: 0 auto;
      }
      
      .footer-section {
        margin-top: 40px;
        text-align: center;
        font-size: 11px;
        color: #666;
        border-top: 1px solid #ddd;
        padding-top: 15px;
      }
      
      .footer-line-1 {
        margin-bottom: 4px;
        line-height: 1.6;
      }
      .footer-line-2 {
        line-height: 1.6;
      }

body
  .header-section
    .company-header
      .logo-section
        img.logo(src=settings.public_server_file+settings.company_logo)
        .company-name-section
          .company-name #{settings.company_name}
          .company-name-english SUPER MAX ENGINEERING CO.
          .company-ownership (Wholly Owned By Super Pioneer Ltd.)
      .certification-section
        .certification-logos
          | ISO 9001: 2008
          br
          | Certificate No: Q368
        .page-number
          | Page
    
    .document-title 簽收單
    
    .info-section
      - const client = model.client || (model.clients && model.clients[0]) || {}
      table.info-table
        tr
          td.info-left
            .info-row 致: #{client.name || ''}
            .info-row #{model.address || client.address || ''}
            if model.contactPerson
              .info-row 收貨人: #{model.contactPerson}
          td.info-right
            .info-row 檔案編號 : #{model.invoiceNumber || (model.numberPrefix || 'SWP') + '-' + model.number + '/' + (model.year || '')}
            .info-row 日期 : #{moment(model.date).format('DD-MM-YYYY')}
    
    .table-container
      table.items-table
        thead
          tr
            th.item-name 項目
            th.item-qty 數量
            th.item-unit 單位
        tbody
          - const allItems = (model.items || []).concat((model.materials || []).map(m => ({ itemName: m.itemName, quantity: m.quantity, price: m.price, warehouse: m.warehouse })))
          each item in allItems
            tr
              td.item-name #{item.itemName}
              td.item-qty #{item.quantity}
              td.item-unit Pcs
          if allItems.length === 0
            tr
              td(colspan='3' style='text-align: center;') 無項目
    
    .acknowledgement-section
      .acknowledgement-title 簽收單
      .acknowledgement-info
        .acknowledgement-item
          .acknowledgement-label 裝箱方式
          .acknowledgement-line
        .acknowledgement-item
          .acknowledgement-label 簽收人
          .acknowledgement-line
        .acknowledgement-item
          .acknowledgement-label 日期
          .acknowledgement-line
    
    .footer-section
      .footer-line-1 #{settings.company_address || '新界火炭坳背灣街14-24號金豪工業大廈第2期14樓G&H室'} 電話: #{settings.company_phone || '2776 4793, 2756 7579'} 傳真: #{settings.company_fax || '2776 4796'}
      .footer-line-2 #{settings.company_address_english || 'Flat G&H, 14/F, Phase 2, Kin Ho Ind. Bldg., 14-24 Au Pui Wan St., Fotan, N.T.'} Tel: #{settings.company_phone || '2776 4793, 2756 7579'} Fax: #{settings.company_fax || '2776 4796'}
